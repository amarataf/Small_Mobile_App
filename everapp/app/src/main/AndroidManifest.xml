<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.everapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/time_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/time_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Everapp">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".WeekActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MondayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TuesdayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".WednesdayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ThursdayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".FridayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SaturdayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SundayActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>